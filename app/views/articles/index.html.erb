<body>
<%= render 'pages/navbar' %>


    <div class="jumbotron jumbotron-fluid bg-dark text-white">
      <div class="container">
        <h1 class="display-4">Articles</h1>
        <p class="lead">Live To Impact
        </p>
      </div>
    </div>

    <div class="container mt-4">
      <div class="container">
        <h1>Articles Listing Page</h1>
        <a class="btn btn-primary float-right mb-3" href="/articles/new" role="button">New Article</a>
      </div>
      
     <div class="">
       <table class="table table-striped table-bordered">
         <thead>
            <tr class="table-primary">
              <th>Title</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
              
               
                <span class="badge badge-dark text-white" title="View Article">
                  <div class="action-btn">
                    <%= link_to 'Show', article_path(article) %>
                  </div>
                 
                </span>

                <span class="badge badge-dark text-white" title="Edit Article">
                  
                  <div class="action-btn">
                    <%= link_to 'Edit', edit_article_path(article) %>
                  </div>
                </span>
                

                <span class="badge badge-danger text-white" title="Delete Article">
                  <div class="text-white">
                   
                    <div class="action-btn">
                      <%= link_to 'Delete', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete Article?' } %>
                    </div>
                  </div>
                  

                </span>
            </td>
            </td>
          </tr>
        <% end %>
        </tbody>
       </table>
     </div>

    </div>
   


